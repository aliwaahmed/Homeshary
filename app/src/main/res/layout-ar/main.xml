<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white_blue"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:background="@color/white_blue"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".Auth.MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/loginToolbar"
                    android:fontFamily="@font/ja"
                    android:textSize="@dimen/textSize"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="120dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <!--  email-->

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/editText_high"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColorHint="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:hint="@string/email"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ja"
                    android:background="@drawable/edittext"
                    android:drawableRight="@drawable/ic_email_black_24dp"
                    android:textSize="@dimen/inputText"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- password-->

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/editText_high"
                android:textColorHint="@color/white"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:hint="@string/pass"
                    android:drawableRight="@drawable/ic_lock_black_24dp"
                    android:textSize="@dimen/inputText"
                    android:fontFamily="@font/ja"
                    android:textColor="@color/white"
                    android:inputType="textPassword"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>


            <!--    login button-->
            <Button
                android:id="@+id/login_btn"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/textSize"
                android:backgroundTint="@color/white"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ja"
                android:textColor="@color/dark_blue"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textStyle="bold"
                android:textAllCaps="false"/>

            <!--    new account-->
            <TextView
                android:id="@+id/newAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/createAccount"
                android:fontFamily="@font/ja"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                android:textColor="@color/white">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <!--        line-->
                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="5dp"
                    android:background="@drawable/line">
                </FrameLayout>

                <!--        or-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:fontFamily="@font/ja"
                    android:textSize="@dimen/textSize"
                    android:text="@string/or"/>

                <!--  line-->
                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="5dp"
                    android:background="@drawable/line">
                </FrameLayout>

            </LinearLayout>

            <!--    login via-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="@string/loginVia"
                android:fontFamily="@font/ja"
                android:textColor="@color/white"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <!-- facebook-->


                <com.facebook.login.widget.LoginButton
                    android:id="@+id/login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"

                    />


                <!-- google-->


                <com.google.android.gms.common.SignInButton
                    android:id="@+id/sign_in_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/forgetPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forgetPass"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/textSize"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:fontFamily="@font/ja"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:gravity="left">


            <Button
                android:id="@+id/_skip_btn"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/textSize"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/ja"
                android:textColor="@color/dark_blue"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_height="wrap_content"
                android:text="@string/skip"
                android:textStyle="bold"
                android:textAllCaps="false"/>


        </LinearLayout>



    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_blue">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white_blue"
        tools:context=".Auth.RegisterActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <!--            page title-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="تأكيد البيانات"
                    android:textSize="20sp"
                    android:drawableLeft="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/ja"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <!--            Back-->
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp">
                </ImageView>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="120dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <!--  name-->

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/editText_high"
                android:textColorHint="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                >

                <Spinner
                    android:id="@+id/spiner1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    style="@style/SpinnerTheme"
                    android:background="@drawable/spinnerbg"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/editText_high"
                android:textColorHint="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                >

                <Spinner
                    android:id="@+id/spiner2"
                    style="@style/SpinnerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"

                    android:layout_weight="1"
                    android:background="@drawable/spinnerbg" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/editText_high"
                android:textColorHint="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                >

                <Spinner
                    android:id="@+id/spiner3"
                    style="@style/SpinnerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"

                    android:layout_weight="1"
                    android:background="@drawable/spinnerbg" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- new password-->

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/editText_high"
                android:textColorHint="@color/white"
                android:inputType="textMultiLine"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_my_location_black_24dp"
                    android:fontFamily="@font/ja"
                    android:hint="العنوان"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--        confirm code-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/editText_high"
                android:textColorHint="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_confirm_password"
                    android:layout_width="match_parent"
                    android:hint="رقم الهاتف"
                    android:fontFamily="@font/ja"
                    android:drawableRight="@drawable/ic_phone_iphone_black_24dp"
                    android:textSize="@dimen/textSize"
                    android:inputType="phone"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!--    login button-->

            <Button
                android:id="@+id/reg_button"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/textSize"
                android:layout_marginTop="20dp"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/ja"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_height="@dimen/editText_high"
                android:text="@string/registerAgain"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>